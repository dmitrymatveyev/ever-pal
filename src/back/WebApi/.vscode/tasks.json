{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "docker-up",
            "type": "process",
            "command": "docker",
            "args": [
                "compose",
                "-f",
                "docker-compose.debug.yml",
                "up",
                "--build"
            ],
            "isBackground": true,
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": "^.*Now listening on:.*$",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Building.*$",
                    "endsPattern": "^.*Now listening on:.*$"
                }
            }
        },
        {
            "label": "docker-down",
            "type": "process",
            "command": "docker",
            "args": [
                "compose",
                "-f",
                "docker-compose.debug.yml",
                "down"
            ]
        }
    ]
}
